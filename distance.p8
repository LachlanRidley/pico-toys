__lua__
local x = 64
local y = 64

local ox = 64
local oy = 64

local s = 2
local d = 0

function _update()
 if(btn(0)) x-=s
 if(btn(1)) x+=s
 if(btn(2)) y-=s
 if(btn(3)) y+=s
 
	local o = oy-y
	local a = ox-x
	d = sqrt(o^2+a^2)
end

function _draw()
 cls()
 circ(x,y,5,8)
 rect(ox-4,oy-4,ox+4,oy+4,12)
 print("distance: "..d,10,10)
end
